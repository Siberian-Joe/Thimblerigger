<UserControl x:Class="Thimblerigger.Thimble"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Thimblerigger"
             mc:Ignorable="d" 
             d:DesignHeight="150" Width="150">
    <Grid>
        <Image Source="ball.png" Width="120" Height="120" VerticalAlignment="Bottom" Margin="0, 0, 0, 10" RenderOptions.BitmapScalingMode="HighQuality"/>
        <Image x:Name="thimble" Source="thimble.png" RenderOptions.BitmapScalingMode="HighQuality"/>
    </Grid>
</UserControl>
